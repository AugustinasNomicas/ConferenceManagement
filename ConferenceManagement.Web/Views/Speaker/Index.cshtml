@model IEnumerable<ConferenceManagement.Web.Models.SpeakerViewModel>

@{
    ViewData["Title"] = "Speakers";
}

<h1>Speakers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSpeaker)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeechName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpeechDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConferenceName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSpeaker)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeechName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpeechDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConferenceName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdSpeaker }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdSpeaker }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdSpeaker })
            </td>
        </tr>
}
    </tbody>
</table>
